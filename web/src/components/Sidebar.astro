---
import { getCollection } from 'astro:content';
import Logo from './Logo.astro';
import GitHubButton from './GitHubButton.astro';
import ThemeSwitcher from './ThemeSwitcher.astro';
import SidebarToggle from './SidebarToggle.astro';

interface Props {
  headings?: { depth: number; slug: string; text: string }[];
  currentSlug?: string;
}

const { headings = [], currentSlug = '' } = Astro.props;

// Dynamically fetch pages from content collection, sorted by sidebar.order
const allPages = await getCollection('manual');
const pages = allPages
  .filter((page) => page.data.sidebar?.order !== undefined)
  .sort((a, b) => (a.data.sidebar?.order ?? 0) - (b.data.sidebar?.order ?? 0))
  .map((page) => ({
    slug: page.id,
    label: page.data.title,
    group: page.data.sidebar?.group,
  }));

function isActive(slug: string): boolean {
  return currentSlug === slug;
}

// Group pages: collect unique groups in order, plus ungrouped pages
type SidebarEntry =
  | { type: 'group-header'; label: string }
  | { type: 'page'; slug: string; label: string };

const entries: SidebarEntry[] = [];
let currentGroup: string | undefined = undefined;

for (const page of pages) {
  if (page.group !== currentGroup) {
    if (page.group) {
      entries.push({ type: 'group-header', label: page.group });
    }
    currentGroup = page.group;
  }
  entries.push({ type: 'page', slug: page.slug, label: page.label });
}
---

<nav class="sidebar" aria-label="Main navigation">
  <div class="sidebar-header">
    <Logo />
    <div class="sidebar-controls">
      <GitHubButton />
      <ThemeSwitcher />
      <SidebarToggle />
    </div>
  </div>
  <div class="sidebar-section">
    <ul class="sidebar-list">
      {entries.map((entry) =>
        entry.type === 'group-header' ? (
          <li class="sidebar-group-header">
            <svg class="sidebar-group-icon" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"/>
            </svg>
            {entry.label}
          </li>
        ) : (
          <li>
            <a
              href={`/${entry.slug}`}
              class:list={['sidebar-link', { active: isActive(entry.slug) }]}
              aria-current={isActive(entry.slug) ? 'page' : undefined}
            >
              {entry.label}
            </a>
            {isActive(entry.slug) && headings.length > 0 && (
              <ul class="sidebar-sublist">
                {headings.map((heading) => (
                  <li>
                    <a
                      href={`#${heading.slug}`}
                      class:list={['sidebar-sublink', `depth-${heading.depth}`]}
                    >
                      {heading.text}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </li>
        )
      )}
    </ul>
  </div>
</nav>

<style>
  .sidebar {
    height: 100%;
  }

  .sidebar-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 1.5rem;
  }

  /* Hide sidebar header on mobile - it's redundant with mobile-header */
  @media (max-width: 960px) {
    .sidebar-header {
      display: none;
    }
  }

  .sidebar-controls {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .sidebar-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: 0.75rem;
  }

  .sidebar-list {
    display: flex;
    flex-direction: column;
    gap: 0;
    list-style: none;
    padding: 0;
    margin: 0;
    padding-bottom: 6rem;
  }

  .sidebar-group-header {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    padding: 0.75rem 0.75rem 0.25rem;
    margin-top: 0.5rem;
  }

  .sidebar-group-icon {
    flex-shrink: 0;
    opacity: 0.6;
  }

  .sidebar-group-header:first-child {
    margin-top: 0;
  }

  .sidebar-link {
    display: block;
    padding: 0.375rem 0.75rem 0.375rem 2rem;
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition: color var(--transition-fast), background-color var(--transition-fast);
  }

  .sidebar-link:hover {
    color: var(--color-accent);
    background-color: var(--color-bg-muted);
  }

  .sidebar-link.active {
    color: var(--color-accent);
    background-color: var(--color-accent-muted);
    font-weight: 500;
  }

  /* Global: sublinks are created dynamically by JS after View Transition navigation */
  :global(.sidebar-sublist) {
    list-style: none;
    padding: 0;
    margin: 0.25rem 0 0.5rem 2rem;
    border-left: 1px solid var(--color-border);
  }

  :global(.sidebar-sublink) {
    display: block;
    padding: 0.25rem 0.75rem;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition: color var(--transition-fast), background-color var(--transition-fast);
  }

  :global(.sidebar-sublink:hover) {
    color: var(--color-accent);
    background-color: var(--color-bg-muted);
  }

  :global(.sidebar-sublink.active) {
    color: var(--color-accent);
    background-color: var(--color-accent-muted);
    font-weight: 500;
  }

  :global(.sidebar-sublink.depth-3) {
    padding-left: 1.5rem;
  }

  :global(.sidebar-sublink.depth-4) {
    padding-left: 2.25rem;
  }

  :global(.sidebar-sublink.depth-5) {
    padding-left: 3rem;
  }

  :global(.sidebar-sublink.depth-6) {
    padding-left: 3.75rem;
  }
</style>
